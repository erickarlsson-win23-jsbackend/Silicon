@using Microsoft.AspNetCore.Identity
@using BlazorApp.Data

@inject SignInManager<ApplicationUser> SignInManager

@rendermode InteractiveAuto

<aside>
    <nav>
        <NavLink class="btn-theme-s" href="/account/details" Match="NavLinkMatch.All">Account Details</NavLink>
        <NavLink class="btn-transparent" href="/account/signedout" @onclick="HandleSignOut">Sign out</NavLink>
    </nav>
</aside>



@code {
    // Utloggning funkar inte, WIP
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private async Task HandleSignOut()
    {
        await SignInManager.SignOutAsync();
    }
}
